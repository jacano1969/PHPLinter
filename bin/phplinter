namespace phplinter;
require dirname(__FILE__) . '/../phplinter/autoloader.php';
require dirname(__FILE__) . '/../phplinter/constants.php';

// inisettings
ini_set('memory_limit', '512M');
set_time_limit (0);

$cli = new CLI();
$cli->process_options($argv, $argc);
$cli->lint();
